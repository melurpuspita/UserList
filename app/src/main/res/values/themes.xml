<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HitachiTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_200</item>
        <item name="colorPrimaryVariant">@color/pink_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--  Typography  -->
    <style name="Typography">

    </style>

    <style name="Typography.Black" parent="Typography">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Black.14.Bold" parent="Typography.Black.14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.HitachiTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListingMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListingMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>