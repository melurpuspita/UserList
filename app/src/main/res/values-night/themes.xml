<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HitachiTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Typography  -->
    <style name="Typography">

    </style>

    <style name="Typography.White" parent="Typography">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Typography.White.10" parent="Typography.White">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Typography.White.12" parent="Typography.White">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Typography.White.14" parent="Typography.White">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.White.14.Bold" parent="Typography.White.14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.White.16" parent="Typography.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Typography.White.16.Bold" parent="Typography.White.16">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Black" parent="Typography">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Black.10" parent="Typography.Black">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Typography.Black.12" parent="Typography.Black">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Typography.Black.12.bold" parent="Typography.Black">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Typography.Black.14" parent="Typography.Black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.Black.14.Bold" parent="Typography.Black.14">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Black.16" parent="Typography.Black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Typography.Black.16.Bold" parent="Typography.Black.16">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.HitachiTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListingMovie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListingMovie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>